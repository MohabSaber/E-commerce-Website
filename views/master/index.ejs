          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Featured Product</h2>
        </div>
        <div class="featured__controls">
          <ul>
            <li class="active" data-filter="*">All</li>
            <li data-filter=.Men>Men</li>
            <li data-filter=.Women>Women</li>
            <li data-filter=.Kids>Kids</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row featured__filter">

      <% featuredProducts.forEach((product)=> { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mix <%= product.category ? product.category.categoryName : '' %>">
        <div class="featured__item">
          <div class="featured__item__pic set-bg" data-setbg="/files/<%=product.productImagePath[0]%>">
            <ul class="featured__item__pic__hover">
              <li><a onclick="wishlist('<%=product.name%>','<%=product.id%>')"><i class="fa fa-heart"></i></a></li>
              <li><a onclick="addToCart('<%=product.id%>','<%=product.name%>','<%=product.price%>',1,'<%=product?.offerPrice%>')"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
          </div>
          <% if(product.discount){ %>
          <div class="product__discount__item__text">
            <h5><a href="/product/<%= product.id %>"><%= product.name %> </a></h5>
            <div class="product__item__price"> EGP <%= product.offerPrice.toFixed(2)%><span>EGP <%= product.price %> </span></div>
          </div>
          <%  } else{ %>
          <div class="product__item__text">
            <h6><a href="/product/<%= product.id %>"><%= product.name %></a></h6>
            <h5>EGP <%= product.price %></h5>
          </div>
          <%  } %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
<!-- Featured Section End -->

<% if(secondaryBanner){%>
<!-- Banner Begin -->
<div class="banner">
  <div class="container">
    <div class="row">
      <% secondaryBanner.forEach(banner=>{ %>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="banner__pic">
          <img src="/files/<%= banner.bannerImagePath %> " alt="">
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<!-- Banner End -->
<%} %>

